<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ExploreCard"
    android:layout_width="176dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5sp"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginTop="5dp"
    android:paddingBottom="0dp"
    app:cardBackgroundColor="#fafafa"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/ExploreImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sample" />

    <RelativeLayout
        android:id="@+id/ExploreLayout"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/ExploreAdd"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10sp"
            android:background="@android:color/transparent"
            android:textColorLink="@android:color/holo_green_dark"
            android:theme="@style/AppTheme"
            app:thumbTint="@android:color/holo_blue_light"
            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/ExploreCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2sp"
            android:layout_marginStart="2sp"
            android:layout_marginTop="115sp"
            android:singleLine="false"
            android:text="Charity Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="139dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>