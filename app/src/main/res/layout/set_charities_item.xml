<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ExploreCard"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:paddingBottom="0dp"
    app:cardBackgroundColor="#fafafa"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ExploreLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_gradient"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ExploreFund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:fontFamily="@font/yeseva_one"
            android:lines="3"
            android:singleLine="false"
            android:text="California Fire Relief Fund"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="139dp" />

        <TextView
            android:id="@+id/exploreCountryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ExploreFund"
            android:fontFamily="sans-serif-condensed"
            android:singleLine="false"
            android:text="Country"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="139dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exploreCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Arts and Culture"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="139dp" />

            <Switch
                android:id="@+id/ExploreAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/color_7_yellow"
                android:trackTint="@color/browser_actions_bg_grey" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>