            <!--android:textColor="@android:color/darker_gray"-->
            <!--android:textSize="16sp"-->
            <!--android:visibility="gone" />-->
            <!--</RelativeLayout>-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>